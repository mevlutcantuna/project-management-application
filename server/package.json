{
  "name": "project-management-app-server",
  "version": "1.0.0",
  "description": "Project Management App Server",
  "main": "src/index.ts",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/src/index.js",
    "build": "tsc",
    "db:init": "tsx src/scripts/init-db.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,js,sql}'",
    "lint:fix": "eslint 'src/**/*.{ts,js,sql}' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,sql,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,sql,json}'"
  },
  "keywords": [],
  "author": "Mevl√ºt Can Tuna",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.17.0",
    "@types/pg": "^8.11.10",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
